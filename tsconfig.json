{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,

    "noImplicitAny": false,
    "strictNullChecks": true, // Would like to turn this on at some point
    "strictPropertyInitialization": true, // Can only be turned on with 'strictNullChecks'.  Not sure if this will work well with Angular

    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngrx-store-sync": [
        "dist/ngrx-store-sync"
      ],
      "ngrx-store-sync/*": [
        "dist/ngrx-store-sync/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
